<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kabukeisan.kirin3.jp.numberpicker.MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:text="num"
            android:textColor="#00f"
            android:textSize="50sp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/numPicker0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaf" />

            <NumberPicker
                android:id="@+id/numPicker1"
                android:scrollbarSize="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawablenp" />

            <kabukeisan.kirin3.jp.numberpicker.CustomNumberPicker
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/numPicker2"
                custom:step="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawablenp"
                android:theme="@style/AlertDialog.AppCompat.Light" />
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="OK" />

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="num"
            android:textColor="#f00"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="num"
            android:textColor="#f00"
            android:textSize="30sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
